<p id="notice"><%= notice %></p>

<h1>Terminals</h1>

<table>
  <thead>
    <tr>
      <th>Terminal number</th>
      <th>Terminal type</th>
      <th>Signal type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @terminals.each do |terminal| %>
      <tr>
        <td><%= terminal.terminal_number %></td>
        <td><%= terminal.terminal_type %></td>
        <td><%= terminal.signal_type %></td>
        <td><%= link_to 'Show', terminal %></td>
        <td><%= link_to 'Edit', edit_terminal_path(terminal) %></td>
        <td><%= link_to 'Destroy', terminal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

