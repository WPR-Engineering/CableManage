<%= form_with(model: wire, local: true) do |form| %>
  <% if wire.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(wire.errors.count, "error") %> prohibited this wire from being saved:</h2>

      <ul>
      <% wire.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :number %>
    <%= form.number_field :number, id: :wire_number %>
  </div>

  <div class="field">
    <%= form.label :wire_type %>
    <%= form.text_field :wire_type, id: :wire_wire_type %>
  </div>

  <div class="field">
    <%= form.label :multi_core %>
    <%= form.check_box :multi_core, id: :wire_multi_core %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
